{{#if results}}
<p>Size: {{results.length}}</p>
<table class="items-table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Visible</th>
        <th>Operation</th>
    </tr>
    {{#each results}}
    <tr class="item-list">
        <td class="center">{{this.id}}</td>
        <td>{{this.name}}</td>
        <td class="center"><span>{{isActiveORVisibleIcon this.visible}}</span></td>
        <td class="center"><a href="/features/edit/{{this.id}}">Edit</a></td>
    </tr>
    {{/each}}
</table>
{{/if}}
